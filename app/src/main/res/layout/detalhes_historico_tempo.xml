<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".view.DetalhesHistoricoActivity">

    <TextView
        android:id="@+id/textview_distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Distancia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_distancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textview_distancia"
        app:layout_constraintTop_toBottomOf="@id/textview_distancia" />

    <TextView
        android:id="@+id/textview_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tempo"
        app:layout_constraintStart_toStartOf="@id/textview_distancia"
        app:layout_constraintTop_toBottomOf="@id/edittext_distancia" />

    <EditText
        android:id="@+id/edittext_tempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textview_distancia"
        app:layout_constraintTop_toBottomOf="@id/textview_tempo" />

</androidx.constraintlayout.widget.ConstraintLayout>